<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dimen_8"
    app:cardCornerRadius="20dp"
    android:elevation="@dimen/dimen_32"
    android:layout_marginBottom="@dimen/dimen_8"
    android:layout_height="104dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/newsTallImage"
            android:layout_width="120dp"
            android:layout_height="104dp"
            android:scaleType="fitXY"
            android:transitionName="img2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_16"
            android:ellipsize="end"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:maxLines="3"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/newsTallImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Xabi Alonso Won't be next BVB Manager Xabi Alonso BVB Manage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>