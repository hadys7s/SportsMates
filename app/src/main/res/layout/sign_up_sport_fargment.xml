<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map">

    <TextView
        android:id="@+id/tv_Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="48dp"
        android:text="Sign up "
        android:textColor="@color/green"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.baoyachi.stepview.HorizontalStepView
        android:id="@+id/stepper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Signup"

       />

    <LinearLayout
        android:id="@+id/tv_choose_sports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stepper">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:src="@drawable/icon_awesome_volleyball_ball" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Choose Sport" />
    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/sports_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        app:chipSpacingHorizontal="2dp"
        app:layout_constraintEnd_toEndOf="@id/tv_choose_sports"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="@id/tv_choose_sports"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_sports"
        app:lineSpacing="2dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/football"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Football"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/vollyball"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vollyball"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/handball"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handball"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/boxing"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boxing"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/running"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Running"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/basketball"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basketball"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/judo"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judo"
            android:textStyle="bold"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/kickboxing"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kickboxing"
            android:textStyle="bold"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/taekwondo"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taekwondo"
            android:textStyle="bold"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/water_skiing"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water skiing"
            android:textStyle="bold"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/rock_climbing"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rock climbing"
            android:textStyle="bold"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/tennis"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tennis"
            android:textStyle="bold"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/swimming"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swimming"
            android:textStyle="bold"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/table_tennis"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table tennis"
            android:textStyle="bold"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/cricket"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cricket"
            android:textStyle="bold"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/sumo_wrestling"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sumo wrestling"
            android:textStyle="bold"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/golf"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Golf"
            android:textStyle="bold"

            />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/orange"
        android:padding="16dp"
        android:text="Done"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />
</androidx.constraintlayout.widget.ConstraintLayout>