<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="@dimen/dimen_16"
    android:elevation="20dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey">
        <FrameLayout
            android:id="@+id/user_img_container"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:background="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </FrameLayout>
        <FrameLayout
            android:id="@+id/shimmer_name"
            android:layout_width="200dp"
            android:layout_height="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginStart="@dimen/dimen_8"
            android:background="@color/grey"
            app:layout_constraintStart_toEndOf="@id/user_img_container"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/shimmer_adress"
            android:layout_width="150dp"
            android:layout_height="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginStart="@dimen/dimen_8"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/shimmer_name"
            app:layout_constraintStart_toEndOf="@id/user_img_container"/>

        <FrameLayout
            android:id="@+id/shimmer_age"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginStart="@dimen/dimen_8"
            android:background="@color/grey"
            app:layout_constraintStart_toEndOf="@id/user_img_container"
            app:layout_constraintTop_toBottomOf="@id/shimmer_adress"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
